{
  "name": "webpack-boilerplate",
  "version": "1.0.0",
  "description": "Wbpack boilderplate to be used for this channel",
  "main": "index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "nodemon app.js",
    "frontend:dev": "cross-env NODE_ENV=dev webpack serve --progress --config webpack.config.dev.js",
    "backend:prod": "node app.js",
    "frontend:prod": "webpack --progress --config webpack.config.prod.js"
  },
  "author": "Akbar Bakhshi",
  "license": "ISC",
  "devDependencies": {
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "file-loader": "^6.2.0",
    "glslify-loader": "^2.0.0",
    "image-minimizer-webpack-plugin": "^2.2.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "mini-css-extract-plugin": "^2.6.0",
    "nodemon": "^2.0.16",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "prefix": "^1.0.0",
    "raw-loader": "^4.0.2",
    "sass": "^1.52.3",
    "sass-loader": "^13.0.0",
    "terser-webpack-plugin": "^5.3.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.1",
    "gsap": "^3.10.4",
    "lil-gui": "^0.16.1",
    "locomotive-scroll": "^4.1.4",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "three": "^0.141.0",
    "ua-parser-js": "^1.0.2"
  }
}
